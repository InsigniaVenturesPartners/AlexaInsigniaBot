{
	"type": "APL",
	"version": "1.8",
	"description": "This APL document places text on the screen and includes a button that sends the skill a message when selected. The button is a pre-defined responsive component from the alexa-layouts package.",
	"import": [
		{
			"name": "alexa-layouts",
			"version": "1.4.0"
		}
	],
	"mainTemplate": {
		"parameters": [
			"payload"
		],
		"items": [
			{
				"type": "Container",
				"height": "${viewport.height}",
				"width": "${viewport.width}",
				"items": [
					{
						"type": "TouchWrapper",
						"alignSelf": "center",
						"id": "touchWrapper",
						"onDown": [
							{
								"type": "SendEvent",
								"arguments": [
									"user clicked screen"
								]
							}
						]
					}
				]
			}
		]
	}
}